type Card {
    id : ID !,
    title : String !,
    author : String,
    imageURL : String,
    type : CardType
}

enum CardType{
    GENRE
    ANTAGONIST
    ITEM
    PLACE
    COMPANION
}

type WaitingCard{
    card : Card !,
    score : Int !,
    addingDate : Date !
}

type Date{
    year : Int !,
    mounth : Int !,
    day : Int !
}

type CardSet {
    id : ID !,
    title : String !,
    author : String,
    genreCard : Card !,
    antagonistCard : Card !,
    itemCard : Card !,
    placeCard : Card !,
    companionCard : Card !,
    score : Int
}

